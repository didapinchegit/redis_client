    <modelVersion>4.0.0</modelVersion>

    <artifactId>com.didapinche.commons.redis</artifactId>
	<name>com.didapinche.commons.redis</name>
	<groupId>com.didapinche</groupId>
	<description>com.didapinche.commons.redis</description>
    <version>1.4.7-SNAPSHOT</version>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.sourcejvm>1.7</project.build.sourcejvm>
        <project.build.targetjvm>1.7</project.build.targetjvm>
